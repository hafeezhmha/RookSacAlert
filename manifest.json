{
  "manifest_version": 3,
  "name": "RookSacAlert",
  "version": "1.0",
  "description": "Automatically plays a video when a rook sacrifice occurs on chess.com",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.chess.com/*"],
      "js": ["content.js"],
      "css": ["overlay.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/THE_ROOK.mp4"],
      "matches": ["*://*.chess.com/*"]
    }
  ]
}
